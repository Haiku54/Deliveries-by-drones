<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="800">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/רחפן.jpg"/>
        </Grid.Background>
        <Button Content="Drones List" HorizontalAlignment="Center" Margin="0,450,0,0" VerticalAlignment="Top" Height="62" Width="296" Click="DroneListAccessButton" FontSize="15" FontFamily="Aharoni">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FF00FFD1" Offset="0"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Welcome" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="200" FontSize="36" FontFamily="Lucida Calligraphy" Foreground="#FF08B7B3"/>


    </Grid>
</Window>
